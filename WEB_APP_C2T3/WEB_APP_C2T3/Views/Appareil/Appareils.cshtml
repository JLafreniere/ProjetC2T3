@model IEnumerable<WEB_APP_C2T3.Models.Appareil>

@{
    ViewBag.Title = "Appareils";
}

<h2>Appareils</h2>


<form action="/Appareil/ajouterAppareil" method="post">
    <button type="submit" value="Ajouter" class="btn btn-success">Ajouter</button>
</form>
<br />
<table class="table">
    <tr>
        <th>
            Nom de l'appareil
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align: left">
            @Html.DisplayFor(modelItem => item.nom_appareil)
        </td>
        <td>
            <a><span class="glyphicon glyphicon-remove" onclick="supprimerAppareil(@{Write(item.Id);})"></span> </a>
        </td>
    </tr>
}

</table>


