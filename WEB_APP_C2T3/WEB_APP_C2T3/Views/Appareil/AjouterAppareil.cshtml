@model WEB_APP_C2T3.Models.Appareil

@{
    ViewBag.Title = "Ajouter un appareil";
}



<form action="/appareil/creerAppareil" method="post">
    
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Appareil</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="text-align: center">
        <label class = "control-label col-md-2" for="nom_appareil" style="text-align: center">Nom de l'appareil</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_appareil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_appareil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-success" />
            </div>
        </div>
    </div>
 </form>

    <div>
        @Html.ActionLink("Retour à la liste", "Appareils")
    </div>
